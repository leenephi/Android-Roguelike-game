package android.roguelike;

import android.content.Context;
import android.content.res.Resources;
import android.graphics.Canvas;
import android.graphics.drawable.Drawable;
import android.graphics.drawable.LayerDrawable;
import java.util.List;

import android.view.View;

public class DrawableTileView extends View {

	private Drawable wall;	
	private Drawable[] map;
	private LayerDrawable tilescreen;

	public DrawableTileView(Context context) {
		super(context);
		
		Resources res = getResources();
		
		wall = res.getDrawable(R.drawable.wall);
		
		map = new Drawable[3];
		
		for (int i=0; i< 3; i++) {
			map[i] = wall;
		}
		
		tilescreen = new LayerDrawable(map);
		
		//this.setBackgroundDrawable(wall);
		
		this.setHapticFeedbackEnabled(true);

	}
	
    protected void onDraw(Canvas canvas) {
    	
    	tilescreen.draw(canvas);
    }

}
